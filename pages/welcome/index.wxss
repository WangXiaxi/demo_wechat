/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 0;
  box-sizing: border-box;
  background: #08ADF2;
}
.user-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 100rpx;
}
.moto-container {
  font-size: 32rpx;
  margin-top: 200rpx;
  border: 1rpx solid #000;
  padding: 20rpx 30rpx;
  font-weight: 300;
  border-radius: 10rpx;
}