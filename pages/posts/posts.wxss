page {
  background: #F8F8F8;
}
swiper {
  height: 400rpx;
}
.swiper-image {
  width: 100%;
  height: 100%;
}
.list-container {
  margin-top: 20rpx;
}
.list-container>.item {
  background: #fff;
  margin-bottom: 20rpx;
  border-top: 1rpx solid #F1F1F1;
  border-bottom: 1rpx solid #F1F1F1;
  display: flex;
  flex-direction: column;
}
.list-container>.item>.header {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding-left: 20rpx;
}
.list-container>.item>.header image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
}
.list-container>.item>.header text {
  color: #999;
  font-size: 24rpx;
}