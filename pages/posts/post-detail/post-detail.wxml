<!-- 先静态页面，先样式在数据 -->
<view class='container'>
  <view class='image-box'>
    <image class='top-big-image' src='{{detailData.post_img}}'></image>
    <image class="top-fix-image" src='/images/music/music-start.png'></image>
  </view>
  <view class='u-info-box'>
    <image class='u-head' src='{{detailData.author_img}}'></image>
    <text class='u-name'>{{detailData.author}}</text>
    <text class='u-text'>发表于</text>
    <text>{{detailData.before_today}}</text>
  </view>
  <view class='tit-box'>
    <text>{{detailData.title}}</text>
  </view>
  <view class='btn-box'>
    <image src='/images/icon/collection.png'></image>
    <image src='/images/icon/share.png'></image>
  </view>
  <view class='content-box'>
    <text class='content'>{{detailData.content}}</text>
  </view>
</view>