.container {
  width: 100%;
  position: relative;
}
.top-big-image {
  display: block;
  width: 100%;
  height: 460rpx;
}
.u-info-box {
  display: flex;
  align-items: center;
  height: 100rpx;
  overflow: hidden;
  padding: 0 30rpx;
}
.u-info-box text {
  color: #999999;
  letter-spacing: 1px;
  font-weight: 300;
}
.u-name {
  font-size: 30rpx;
}
.u-text {
  margin: 4rpx 10rpx 0;
}
.u-head {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.tit-box text {
  padding: 0 30rpx;
  letter-spacing: 2px;
  font-size: 36rpx;
  font-weight: bold;
  color: #4D566D;
  line-height: 2;
}
.btn-box {
  display: flex;
  width: 100%;
  height: 92rpx;
  overflow: hidden;
  margin-top: 20rpx;
  background-image: -webkit-linear-gradient(top,#d9d9d9,#d9d9d9 50%,transparent 0);
  background-image: linear-gradient(180deg,#d9d9d9,#d9d9d9 50%,transparent 0);
  background-size: calc(100% - 60rpx) 2px;
  background-repeat: no-repeat;
  background-position: 50% 50%;
  background-origin: content-box;
}