.post-item {
  background: #fff;
  margin-bottom: 20rpx;
  border-top: 1rpx solid #F1F1F1;
  border-bottom: 1rpx solid #F1F1F1;
  display: flex;
  flex-direction: column;
}
.post-item>.header {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding-left: 20rpx;
}
.post-item>.header image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
}
.post-item>.header text {
  color: #999;
  font-size: 24rpx;
}
.post-item .tit {
  line-height: 60rpx;
  padding: 0 20rpx;
  font-size: 34rpx;
  font-weight: bold;
}
.post-item .img {
  width: 100%;
  margin-top: 20rpx;
  height: 480rpx;
}
.post-item .des {
  margin-top: 20rpx;
  font-size: 32rpx;
  padding: 0 20rpx;
}
.post-item .tools {
  display: flex;
  align-items: center;
  height: 60rpx;
  margin-top: 10rpx; 
  padding: 0 20rpx;
  font-size: 28rpx;
}
.post-item .tools .ico {
  margin-right: 40rpx;
  display: flex;
  align-items: center;
}
.post-item .tools .ico text {
  color: #666;
}
.post-item .tools .ico image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}